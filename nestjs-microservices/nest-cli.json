{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nestjs-microservices/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/nestjs-microservices/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/nestjs-microservices",
  "projects": {
    "nestjs-microservices": {
      "type": "application",
      "root": "apps/nestjs-microservices",
      "entryFile": "main",
      "sourceRoot": "apps/nestjs-microservices/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nestjs-microservices/tsconfig.app.json"
      }
    },
    "users": {
      "type": "application",
      "root": "apps/users",
      "entryFile": "main",
      "sourceRoot": "apps/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.app.json"
      }
    },
    "app-api-gateway": {
      "type": "application",
      "root": "apps/app-api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/app-api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/app-api-gateway/tsconfig.app.json"
      }
    },
    "products": {
      "type": "application",
      "root": "apps/products",
      "entryFile": "main",
      "sourceRoot": "apps/products/src",
      "compilerOptions": {
        "tsConfigPath": "apps/products/tsconfig.app.json"
      }
    }
  }
}